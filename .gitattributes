# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# Python files
*.py text eol=lf

# C/C++ files
*.c text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf

# Markdown and documentation
*.md text eol=lf
*.txt text eol=lf

# JSON files
*.json text eol=lf

# Makefiles
Makefile text eol=lf
*.mk text eol=lf

# Binary files
*.so binary
*.a binary
*.o binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
